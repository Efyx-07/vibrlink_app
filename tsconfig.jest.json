{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "jest.setup.ts"],
  "exclude": ["node_modules", ".next", "coverage"]
}
